<Page
    x:Class="Advocate_Diary.Add_article"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Advocate_Diary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Add_new_article.jpg"/>
        </Grid.Background>
        <Button x:ConnectionId='1' HorizontalAlignment="Left" Margin="49,54,0,0" VerticalAlignment="Top" Height="67" Width="170"                       />
        <TextBlock HorizontalAlignment="Left" Margin="431,140,0,0" TextWrapping="Wrap" Text="Topic Name" VerticalAlignment="Top" FontSize="20" Foreground="Black" Height="27"/>
        <TextBox x:Name="txtArticle" HorizontalAlignment="Left" Margin="568,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="27" BorderBrush="AntiqueWhite"/>
        <TextBlock HorizontalAlignment="Left" Margin="431,247,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Height="32" Width="125" FontSize="20" Foreground="Black"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Margin="473,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="418" Height="323" BorderBrush="AntiqueWhite"/>
        <Button x:ConnectionId='2' HorizontalAlignment="Left" Margin="588,660,0,0" VerticalAlignment="Top" Width="184" Height="62"                       />
        <TextBlock x:Name="tbl1" HorizontalAlignment="Left" Margin="63,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="8" RenderTransformOrigin="0.5,0.5" Width="5">
            <TextBlock.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="tblmessage" HorizontalAlignment="Left" Margin="454,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="472" FontSize="36" Foreground="Black" FontWeight="Black"/>
        <Button x:ConnectionId='3' HorizontalAlignment="Left" Margin="22,671,0,0" VerticalAlignment="Top" Height="65" Width="114" BorderBrush="Transparent"                       />

    </Grid>
</Page>

